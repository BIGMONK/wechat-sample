/* pages/animal/index.wxss */

.container {
  width: 100%;
  height: 500px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ripple {
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 100%;
  height: 10px;
  width: 10px;
  margin-top: -90px;
  position: absolute;
  transform: scale(0);
}

@keyframes ripple {
  100% {
    -transform: scale(12);
    transform: scale(12);
    background-color: transparent;
  }
}

.icon {
  width: 200rpx;
  height: 200rpx;
  background-color: yellowgreen;
  border-radius: 50%;
  animation: sway 2s ease-in-out infinite;
  opacity: 0.9;
}

@keyframes sway {
  0% {
    transform: scale(0.9);
  }

  17% {
    transform: scale(1.1);
  }

  34% {
    transform: scale(0.9);
  }

  50% {
    transform: scale(1.1);
  }

  67% {
    transform: scale(0.9);
  }

  84% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(0.9);
  }
}
