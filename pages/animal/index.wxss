/* pages/animal/index.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 200rpx;
  height: 200rpx;
  background-color: yellowgreen;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
  /* animation: sway 2s lineat infinite; */
  opacity: 0.9;
}

.icon2 {
  width: 200rpx;
  height: 200rpx;
  animation: sway 2s linear infinite;
  background: gray;
}

.icon2-top {
  animation: none;
   background: green;
}

@keyframes sway {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.5);
  }

  100% {
    transform: scale(1);
  }
}
