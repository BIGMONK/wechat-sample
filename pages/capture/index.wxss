/* pages/capture/index.wxss */

.result-dialog {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5) !important;
}

.dialog-root {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: transparent;
  align-items: center;
}

.btnss {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  position: absolute;
  bottom: 5%;
}

.result-dialog2 {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: rgba(0, 0, 0, 0.5) !important;
}

.dialog-root2 {
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: transparent;
  align-items: center;
  align-self: center;
}

.share-image {
  width: 100%;
  height: 90%;
}
.share-image-hidden{
  display: none
}
.share-image-show{
  width: 80%;
  height: 90%;
  position: absolute;
  align-self: center;
}
.back2 {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: rgba(222, 222, 222, 0.5);
  clip-path: circle(50% at 50% 50%);
  text-align: center;
  bottom: 0rpx;
}
