/* pages/pulltorefresh/index.wxss */

page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-parent {
  margin-top: 16rpx;
  align-self: center;
  width: 622rpx;
  height: 669rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-top: 1rpx solid rgba(96, 169, 49, 1);
  border-left: 1rpx solid rgba(96, 169, 49, 1);
  border-right: 1rpx solid rgba(96, 169, 49, 1);
}

.scroll-view {
  height: 540rpx;
  width: 100%;
  background: #313550;
}

/* ::-webkit-scrollbar {
  width: 6px; 
} */

.list-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 43rpx;
  color: #4b4f69;
  font-size: 20rpx;
  position: relative;
}

.first-line {
  position: absolute;
  background: rgba(35, 41, 67, 1);
  width: 100%;
  height: 11rpx;
  clip-path: polygon(0 0, 100% 0, 100% 20%, 80% 20%, 78.5% 100%, 77% 20%, 40% 20%, 38.5% 100%, 37% 20%, 19% 20%, 17.5% 100%, 16% 20%, 9% 20%, 7.5% 100%, 6% 20%, 0 20%);
  bottom: -10rpx;
}

.item-first {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
}

.item-first-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -10;
}

.item-other {
  align-items: center;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.item-other-line {
  height: 4rpx;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  z-index: 10;
}

.display-none {
  display: none;
}
